<odoo>
    <data>
        <record model="ir.ui.view" id="test.test_list">
            <field name="name">Test List</field>
            <field name="model">test.test</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="purpose"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="test.test_session_list">
            <field name="name">Test Session List</field>
            <field name="model">test.test_session</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="duration"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="test.test_session_form">
            <field name="name">Test Session Form</field>
            <field name="model">test.test_session</field>
            <field name="arch" type="xml">
                <form string="Test Session Form">
                    <sheet>
                        <group>
                            <field name="start_date" string="Start date"/>
                            <field name="end_date" />
                            <field name="duration"/>
                            <field name="test"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
